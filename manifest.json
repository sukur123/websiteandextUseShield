{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "0.1.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "alarms",
    "notifications",
    "contextMenus",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*",
    "https://*.supabase.co/*",
    "https://www.paypal.com/*",
    "https://api-m.paypal.com/*",
    "https://api-m.sandbox.paypal.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "analyze-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Analyze current page for money traps"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Open Money Trap Analyzer popup"
    }
  }
}